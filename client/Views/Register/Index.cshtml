@model client.Models.User

@{
    ViewData["Title"] = "Rekisteröidy";
}

<h2>REKISTERÖIDY</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Kutsumanimi
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
                <span class="text-danger">@ViewBag.nicknameInUse</span>
            </div>
            <div class="form-group">
                Etunimi
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                Sukunimi
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                 Sähköposti
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-danger">@ViewBag.emailInUse</span>
                <span class="text-danger">@ViewBag.emailIsIncorrect</span>
            </div>
            <div class="form-group">
                Salasana
                <input type="password" id="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                Toista salasana
                <input type="password" id="confirmPassword" class="form-control" />
                <span id="passwordMatchError" class="text-danger" style="display:none;">Salasanat eivät täsmää</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rekisteröidy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        const errorSpan = document.getElementById('passwordMatchError');

        function validatePassword() {
            if (passwordInput.value !== confirmPasswordInput.value) {
                errorSpan.style.display = 'block';
                confirmPasswordInput.setCustomValidity("Salasanat eivät täsmää");
            } else {
                errorSpan.style.display = 'none';
                confirmPasswordInput.setCustomValidity('');
            }
        }

        passwordInput.addEventListener('input', validatePassword);
        confirmPasswordInput.addEventListener('input', validatePassword);
    });


    document.querySelector('form').addEventListener('submit', function(e) {
        if (passwordInput.value !== confirmPasswordInput.value) {
            e.preventDefault();
            errorSpan.style.display = 'block';
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
