@model client.Models.Pticket
@{
    ViewData["Title"] = "Ticket";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            background: white;
            overflow: hidden; 
        }

        .qr-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px; 
        }

        .qr-code {
            width: 100%; 
            height: 100%; 
            object-fit: contain; 
            max-width: 1000px; 
            max-height: 1000px; 
        }
    </style>
</head>
<body>
    <div class="qr-container">
        <img src="@Url.Action("GenQR", "Api", new { id = ViewBag.Code })" alt="QR-koodi" class="qr-code">
    </div>
</body>
</html>