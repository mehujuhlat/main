@model client.Controllers.RecoverUser

@{
    ViewData["Title"] = "Palauta salasana";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">UUSI SALASANA</h2>
                </div>
                <div class="card-body">
        <form asp-action="NewPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                Salasana
                <input asp-for="Password" id="password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
               Toista salasana
               <input type="password" id="confirmPassword" class="form-control" />
               <span id="passwordMatchError" class="text-danger" style="display:none;">Salasanat eivät täsmää</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Aseta uusi salasana" class="btn btn-success" />
            </div>
        </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');
    const errorSpan = document.getElementById('passwordMatchError');

    document.addEventListener('DOMContentLoaded', function() {
   

        function validatePassword() {
            if (passwordInput.value !== confirmPasswordInput.value) {
                errorSpan.style.display = 'block';
                confirmPasswordInput.setCustomValidity("Salasanat eivät täsmää");
            } else {
                errorSpan.style.display = 'none';
                confirmPasswordInput.setCustomValidity('');
            }
        }

        passwordInput.addEventListener('input', validatePassword);
        confirmPasswordInput.addEventListener('input', validatePassword);
    });

     document.querySelector('form').addEventListener('submit', function(e) {
        if (passwordInput.value !== confirmPasswordInput.value) {
            e.preventDefault();
            confirmPasswordInput.setCustomValidity("Salasanat eivät täsmää");
            errorSpan.style.display = 'block';
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
