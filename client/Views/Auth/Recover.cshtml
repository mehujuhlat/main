@model client.Controllers.RecoverUser

@{
    ViewData["Title"] = "Palauta salasana";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">PALAUTA SALASANA</h2>
                </div>
                <div class="card-body">
Annettuun sähköpostiin lähetetään sinulle linkki, jonka avulla voit luoda uuden salasanan.

        <form asp-action="Recover">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lähetä linkki" class="btn btn-success" />
            </div>
        </form>
        @ViewBag.NotFound
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
